<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Museum_Practitioner.Views.Splash" BackgroundColor="Black">
    <ContentPage.Content>
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
             </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
              </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Grid.Column="0">
        <Image  Source="MP.png" Aspect="AspectFit">
                <Image.Clip>
                    <EllipseGeometry Center ="50,50" RadiusX ="100" RadiusY="100"/>
                </Image.Clip>
        </Image>
        </StackLayout>
        <Label Grid.Row="1" Grid.Column="1" Text="MUSEUM PRACTITIONER" FontSize="Large" FontAttributes="Bold" TextColor="WhiteSmoke"/>
      </Grid>
   
        
    </ContentPage.Content>
</ContentPage>